<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Todo List" />
    <StackLayout class="p-4">
        <GridLayout columns="*, auto" class="mb-4">
            <TextField hint="Add new todo" text="{{ newTodoText }}" 
                      returnKeyType="done" returnPress="{{ addTodo }}" col="0" 
                      class="input border-b border-gray-300 p-2" />
            <Button text="Add" tap="{{ addTodo }}" col="1" 
                    class="btn btn-primary ml-2 px-4" />
        </GridLayout>
        
        <ListView items="{{ todos }}" itemTap="{{ toggleTodo }}" class="list-group">
            <ListView.itemTemplate>
                <GridLayout columns="*, auto" class="list-group-item p-4 border-b border-gray-200">
                    <Label text="{{ title }}" 
                           textDecoration="{{ completed ? 'line-through' : 'none' }}"
                           class="{{ completed ? 'text-gray-400' : 'text-gray-800' }} text-lg"
                           col="0" />
                    <Label text="âœ“" class="text-green-500 text-xl font-bold" col="1"
                           visibility="{{ completed ? 'visible' : 'collapsed' }}" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>